{% extends 'base.html.twig' %}

{% block title %}Trainings{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <div class="col-xl-3 bg-grey">
            <div class="d-flex justify-content-center">
                <h1>Trainings</h1>
            </div>
            {% if trainings %}
                <ul style="list-style-type: none; padding: 0;">
                {% for training in trainings %}
                    <li class="list-elem btn-no-style mt-2" data-id="{{ training.id }}">◁○ {{ training.name }}</li>
                {% endfor %}
                </ul>
            {% endif %}
            <div id="cont-add" class="d-none form-group text-white">
                {{ form_start(training_form, {'attr': {'class': 'row'}})}}
                {{ form_widget(training_form.name) }}
                {{ form_widget(training_form.submit) }}
                {{ form_end(training_form) }}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn-no-style mb-3" id="btn-add-training">----add----</button>
            </div>
        </div>
        <div class="col-xl-9 border">
            <h1 id="training-name" class="mb-3">Excercises</h1>
            <div id="exercises">
                <h3><----Select training</h3>
            </div>
            <div class="d-flex justify-content-center mt-5">
                <div class="d-flex" id="search-spinner" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <a id="a-edit" class="d-flex justify-content-center"><button id="btn-add-exercise" class="btn-no-style mt-3 d-none">
                    ------------------------------------------ edit ------------------------------------------
                </button></a>
        </div>
    </div>
</div>
{% block javascripts %} {{ encore_entry_script_tags('trainings') }} {% endblock %}
{% endblock %}
